<aegis>
  <provide>
    <credential name="DeviceStateControl"/>
  </provide>
  <!-- request cal access for the main server process (not needed for the DSME HW watchdog daemon) -->
  <!-- cal access is specifically needed by the powerontimer module -->
  <request>
    <credential name="GRP::cal" />
    <credential name="CAP::sys_boot" />
    <for path="/sbin/dsme-server" />
  </request>
</aegis>
